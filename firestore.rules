rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ══════════════════════════════════════════════════════════════════════════
    // HELPER FUNCTIONS
    // ══════════════════════════════════════════════════════════════════════════

    function isSignedIn() {
      return request.auth != null;
    }

    // Check if user document exists
    function userDocExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Get the current user's document (only call after confirming userDocExists)
    function getUserDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Get a member document by ID
    function getMemberDoc(memberId) {
      return get(/databases/$(database)/documents/members/$(memberId)).data;
    }

    // Check if user has an active society set
    function hasActiveSociety() {
      return userDocExists() && getUserDoc().activeSocietyId != null;
    }

    // Check if user is a member of the given society (safe for new users)
    function isMemberOfSociety(societyId) {
      return isSignedIn() && userDocExists() && getUserDoc().activeSocietyId == societyId;
    }

    // Get the current user's roles for their active society (only call when userDocExists)
    function getCurrentMemberRoles() {
      let userDoc = getUserDoc();
      let memberDoc = getMemberDoc(userDoc.activeMemberId);
      return memberDoc.roles;
    }

    // Safe role check - returns false if user doc doesn't exist
    function hasRoleSafe(role) {
      return userDocExists() && hasActiveSociety() && (role in getCurrentMemberRoles() || role.lower() in getCurrentMemberRoles());
    }

    // Role checks (safe for new users - return false if no user doc)
    function isCaptain() {
      return userDocExists() && hasActiveSociety() && (
        'captain' in getCurrentMemberRoles() ||
        'CAPTAIN' in getCurrentMemberRoles() ||
        'Captain' in getCurrentMemberRoles()
      );
    }

    function isSecretary() {
      return userDocExists() && hasActiveSociety() && (
        'secretary' in getCurrentMemberRoles() ||
        'SECRETARY' in getCurrentMemberRoles() ||
        'Secretary' in getCurrentMemberRoles()
      );
    }

    function isTreasurer() {
      return userDocExists() && hasActiveSociety() && (
        'treasurer' in getCurrentMemberRoles() ||
        'TREASURER' in getCurrentMemberRoles() ||
        'Treasurer' in getCurrentMemberRoles()
      );
    }

    function isHandicapper() {
      return userDocExists() && hasActiveSociety() && (
        'handicapper' in getCurrentMemberRoles() ||
        'HANDICAPPER' in getCurrentMemberRoles() ||
        'Handicapper' in getCurrentMemberRoles()
      );
    }

    // Management Committee (ManCo) - can manage events
    function canManageEvents() {
      return isCaptain() || isSecretary() || isHandicapper();
    }

    // Can manage event finances
    function canManageEventFinances() {
      return isCaptain() || isTreasurer();
    }

    // ══════════════════════════════════════════════════════════════════════════
    // USERS COLLECTION
    // ══════════════════════════════════════════════════════════════════════════
    match /users/{userId} {
      // Users can only read/write their own document
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // ══════════════════════════════════════════════════════════════════════════
    // SOCIETIES COLLECTION
    // ══════════════════════════════════════════════════════════════════════════
    match /societies/{societyId} {
      // Any signed-in user can read societies (needed for join code lookup)
      allow read: if isSignedIn();

      // Any signed-in user can create a society (for onboarding - no role check)
      allow create: if isSignedIn();

      // Only captain of the society can update it
      allow update: if isMemberOfSociety(societyId) && isCaptain();

      // Only captain can delete society
      allow delete: if isMemberOfSociety(societyId) && isCaptain();
    }

    // ══════════════════════════════════════════════════════════════════════════
    // MEMBERS COLLECTION
    // ══════════════════════════════════════════════════════════════════════════
    match /members/{memberId} {
      // Members of the same society can read member docs
      // Also allow read if user doesn't have active society yet (for bootstrap)
      allow read: if isSignedIn() && (
        !userDocExists() ||
        !hasActiveSociety() ||
        isMemberOfSociety(resource.data.societyId)
      );

      // Anyone signed in can create a member (for joining/creating a society)
      allow create: if isSignedIn();

      // Update rules - protect the roles field
      allow update: if isSignedIn() && isMemberOfSociety(resource.data.societyId) && (
        // Captain can update anything including roles
        isCaptain() ||
        // Non-captains can update, but NOT the roles field
        (
          (isTreasurer() || isSecretary()) &&
          (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['roles']))
        )
      );

      // Only captain can delete members
      allow delete: if isSignedIn() && isMemberOfSociety(resource.data.societyId) && isCaptain();
    }

    // ══════════════════════════════════════════════════════════════════════════
    // EVENTS COLLECTION
    // ══════════════════════════════════════════════════════════════════════════
    match /events/{eventId} {
      // Members of the society can read events
      allow read: if isSignedIn() && isMemberOfSociety(resource.data.societyId);

      // Captain, Secretary, or Handicapper can create events
      allow create: if isSignedIn() && isMemberOfSociety(request.resource.data.societyId) && canManageEvents();

      // Captain, Secretary, Handicapper can update events
      // Treasurer can update payment-related fields
      allow update: if isSignedIn() && isMemberOfSociety(resource.data.societyId) && (
        canManageEvents() || canManageEventFinances()
      );

      // Only Captain or Secretary can delete events
      allow delete: if isSignedIn() && isMemberOfSociety(resource.data.societyId) && (isCaptain() || isSecretary());

      // Event expenses subcollection
      match /expenses/{expenseId} {
        allow read: if isSignedIn() && isMemberOfSociety(get(/databases/$(database)/documents/events/$(eventId)).data.societyId);
        allow create, update, delete: if isSignedIn() &&
          isMemberOfSociety(get(/databases/$(database)/documents/events/$(eventId)).data.societyId) &&
          canManageEventFinances();
      }
    }

    // ══════════════════════════════════════════════════════════════════════════
    // COURSES COLLECTION
    // ══════════════════════════════════════════════════════════════════════════
    match /courses/{courseId} {
      // Members of the society can read courses
      allow read: if isSignedIn() && isMemberOfSociety(resource.data.societyId);

      // Captain, Secretary can manage courses
      allow create: if isSignedIn() && isMemberOfSociety(request.resource.data.societyId) && (isCaptain() || isSecretary());
      allow update, delete: if isSignedIn() && isMemberOfSociety(resource.data.societyId) && (isCaptain() || isSecretary());
    }

    // ══════════════════════════════════════════════════════════════════════════
    // TEESETS COLLECTION
    // ══════════════════════════════════════════════════════════════════════════
    match /teesets/{teeSetId} {
      // Members of the society can read tee sets
      allow read: if isSignedIn() && isMemberOfSociety(resource.data.societyId);

      // Captain, Secretary, Handicapper can manage tee sets
      allow create: if isSignedIn() && isMemberOfSociety(request.resource.data.societyId) && (isCaptain() || isSecretary() || isHandicapper());
      allow update, delete: if isSignedIn() && isMemberOfSociety(resource.data.societyId) && (isCaptain() || isSecretary() || isHandicapper());
    }
  }
}
